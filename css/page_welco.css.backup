    position: absolute;
    padding-left: 10px;
    padding-right: 10px;
    border-color: black;
    background-color: coral;
    box-sizing: border-box;
}


article.greetings{
    top: 0;
    left: 0;
    width: 33%;
    height: 66%;
}

article.portrait_she{
    top: 0;
    left: 33%;
    width: 17%;
    height: 66%;

    overflow: hidden;
}

article.marry{
    top: 0;
    left: 50%;
    width: 50%;
    height: 33%;
}

article.about{
    top: 66%;
    left: 0;
    width: 50%;
    height: 33%;
}

article.portrait_he{
    top: 33%;
    left: 50%;
