css:

/* Der Container ist die Klasse einer anzeigeseite */
.grid_container{
    height: 90vh;
    width: 90vw;
    position: relative;
    margin: 0;
    padding: 0;

    animation-name: hoverout;
    animation-iteration-count: 1;
    animation-duration: .7s;
    opacity: 0;
    animation-timing-function: ease-in-out;

    align-items: center;
    text-align: center;
    justify-items: center;
    display:inline-block;
}


.grid_container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-template-rows: repeat(5, 1fr);
  grid-column-gap: 0px;
  grid-row-gap: 0px;
  border: solid 5px;
  position: absolute;
  padding-left: 10px;
  padding-right: 10px;
  border-color: black;
  background-color: coral;
  box-sizing: border-box;
}

article.greetings { grid-area: 1 / 1 / 4 / 2; }
article.portrait_she { grid-area: 1 / 2 / 4 / 3; }
article.marry { grid-area: 1 / 3 / 3 / 5; }
article.about { grid-area: 4 / 1 / 6 / 3; }
article.portrait_he { grid-area: 3 / 3 / 6 / 4; }
article.else { grid-area: 3 / 4 / 6 / 5; }

article{
  border: solid black 5px;
}



.welcome_grid {
    /* Wirft das komplexe Spalten-Lay out über Bord */
    grid-template-columns: 1fr; /* Nur noch eine Spalte! */

    /* Die Zeilenhöhe passt sich automatisch dem Inhalt an */
    grid-template-columns: auto;

    /* Definiert eine simple, vertikale Stapel-Reihenfolge */
    grid-template-areas:
    "greetings" "p_she" "p_he" "marry" "about" "else";
}

/* Auf dem Handy könnten die Boxen etwas weniger Höhe benötigen */
.welcome_grid article{
    min-height: 200px;
}

@media (max-width: 768px) {
  .grid_container {
    overflow-x: scroll; /* Horizontales Scrollen erlauben */
    overflow-y: hidden;  /* Vertikales Scrollen verhindern */

    /* Optional: Für ein besseres Scroll-Verhalten (siehe Erklärung unten) */
    scroll-snap-type: x mandatory;



    /* Das Grid soll horizontal fließen */
    grid-auto-flow: column;
}
